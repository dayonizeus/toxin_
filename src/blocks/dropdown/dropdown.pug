mixin dropdown(label_str, value_str, options_listOfStr)
	div(class!=attributes.class)
		.dropdown__label= label_str
		.dropdown__input-group
			input.dropdown__input-form(type='text', value=value_str)
			.dropdown__input-form-icon
		.dropdown__options
			ul.dropdown__options-list
				each val in options_listOfStr
					li.dropdown__option
						p.dropdown__option-title= val
						button.dropdown__option-decrease.button-switch -
						p.dropdown__option-value 0
						button.dropdown__option-increase.button-switch +
			.dropdown__options-control
				+button-form('очистить')(class='dropdown__options-clean button-form--clean')
				+button-form('применить')(class='dropdown__options-apply button-form--apply')